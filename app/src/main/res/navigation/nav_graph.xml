<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sportbetlive.sgdsn.fragment.HomeFragment"
        android:label="SportBet"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_sportLeague"
            app:destination="@id/sportLeagueFragment" />
        <action
            android:id="@+id/action_home_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/sportLeagueFragment"
        android:name="com.sportbetlive.sgdsn.fragment.SportLeagueFragment"
        android:label="League"
        tools:layout="@layout/fragment_sport_league">
        <argument
            android:name="sportIndex"
            app:argType="integer" />
        <action
            android:id="@+id/action_league_to_teamDetail"
            app:destination="@id/teamDetailFragment" />
        <action
            android:id="@+id/action_league_to_matchSim"
            app:destination="@id/matchSimFragment" />
    </fragment>

    <fragment
        android:id="@+id/teamDetailFragment"
        android:name="com.sportbetlive.sgdsn.fragment.TeamDetailFragment"
        android:label="Team"
        tools:layout="@layout/fragment_team_detail">
        <argument
            android:name="teamId"
            app:argType="integer" />
        <argument
            android:name="sportIndex"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/matchSimFragment"
        android:name="com.sportbetlive.sgdsn.fragment.MatchSimFragment"
        android:label="Match Simulator"
        tools:layout="@layout/fragment_match_sim">
        <argument
            android:name="sportIndex"
            app:argType="integer" />
        <action
            android:id="@+id/action_matchSim_to_matchResult"
            app:destination="@id/matchResultFragment" />
    </fragment>

    <fragment
        android:id="@+id/matchResultFragment"
        android:name="com.sportbetlive.sgdsn.fragment.MatchResultFragment"
        android:label="Result"
        tools:layout="@layout/fragment_match_result">
        <argument
            android:name="sportIndex"
            app:argType="integer" />
        <argument
            android:name="homeTeamId"
            app:argType="integer" />
        <argument
            android:name="awayTeamId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.sportbetlive.sgdsn.fragment.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
